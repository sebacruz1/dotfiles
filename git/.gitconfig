[user]

    name = sebacruz1
    email = sebastiancruzpomar@gmail.com

[core]
    editor = nvim
    autocrlf = input
    excludesfile = /Users/seba/.gitignore_global
    filemode = false

[color]
    ui = auto

[init]
    defaultBranch = main

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    last = log -1 HEAD
    lg = log --oneline --graph --decorate --all
    unstage = reset HEAD --
    amend = commit --amend --no-edit
    save = stash push -m "WIP"
    unsave = stash pop
    changes = diff --cached
    ls = ls-files

[diff]
    tool = nvimdiff

[difftool "nvimdiff"]
    path = nvim

[merge]
    tool = nvim

[push]
    default = simple

[pager]
  diff = diff-so-fancy | less --tabs=4 -RFX
  log  = diff-so-fancy | less --tabs=4 -RFX
  show = diff-so-fancy | less --tabs=4 -RFX


